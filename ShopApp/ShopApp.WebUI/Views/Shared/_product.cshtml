@model Product

<div class="card mb-2">
	<img class="card-img-top" src="~/images/@Model.ImageUrl" alt="">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<small class="text-muted">
			<i>DKK</i> @Model.Price
		</small>
	</div>
	<div class="card-footer text-center">
		<a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
		<a asp-controller="Shop" asp-action="Addtocart" asp-route-Id="@Model.ProductId" class="btn btn-primary btn-sm">Add to cart</a>
	</div>

</div>