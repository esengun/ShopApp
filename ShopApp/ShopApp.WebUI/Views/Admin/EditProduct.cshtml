}*@

@model ProductModel

<h1 class="h3">Edit Product</h1>
<hr />

<div class="row">
	<div class="col-md-8">
		<form asp-controller="Admin" asp-action="EditProduct" method="post">
			<input type="hidden" asp-for="ProductId"/>
			<div class="form-group row mb-3">
				<label asp-for="Name" class="col-sm-2 col-form-label"></label> @*asp-for fetchs field and its value and sets it in the html tag automatically*@
				<div class="col-sm-10">
					<input class="form-control" asp-for="Name"> @*name is used in action and id is used in view*@
				</div>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="Url" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Url">
				</div>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="Description" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<textarea class="form-control" asp-for="Description"></textarea>
				</div>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="Price" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Price">
				</div>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="ImageUrl">
				</div>
			</div>
			<div class="form-group row mb-3">
				<div class="col-sm-10 offset-sm-2">
					<button type="submit" class="btn btn-primary">Save Product</button>
				</div>
			</div>
		</form>
	</div>
</div>


